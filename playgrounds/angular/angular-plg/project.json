{
  "name": "angular-plg",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "playgrounds/angular/angular-plg/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/playgrounds/angular/angular-plg",
        "browser": "playgrounds/angular/angular-plg/src/main.ts",
        "tsConfig": "playgrounds/angular/angular-plg/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "playgrounds/angular/angular-plg/public"
          }
        ],
        "styles": ["playgrounds/angular/angular-plg/src/styles.css"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "angular-plg:build:production"
        },
        "development": {
          "buildTarget": "angular-plg:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@angular/build:unit-test",
      "options": {}
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "angular-plg:build",
        "port": 4200,
        "staticFilePath": "dist/playgrounds/angular/angular-plg/browser",
        "spa": true
      }
    }
  }
}
